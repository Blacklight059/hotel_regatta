{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
<div class="col-11 mx-auto">
    <h3 class="quotes p-4 shadow">Room index</h3>
    <a href="{{ path('app_room_new') }}" class="btn-connexion m-3 p-3">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.title }}</td>
                <td>{{ room.content }}</td>
                <td>{{ room.price }}</td>
                <td>
                    <a href="{{ path('app_room_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('app_room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_room_new') }}" class="btn-connexion m-3 p-3">Create new</a>
</div>
{% endblock %}
