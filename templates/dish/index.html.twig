{% extends 'base.html.twig' %}

{% block title %}Dish index{% endblock %}

{% block body %}

<div class="col-11 mx-auto">
    <h3 class="quotes p-4 shadow">Dish index</h3>
        <a href="{{ path('app_dish_new') }}">Créer un nouveau plat</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dish in dishes %}
            <tr>
                <td>{{ dish.id }}</td>
                <td>{{ dish.name }}</td>
                <td>{{ dish.price }}</td>
                <td>
                    <a href="{{ path('app_dish_show', {'id': dish.id}) }}">show</a>
                    <a href="{{ path('app_dish_edit', {'id': dish.id}) }}">editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dish_new') }}">Créer un nouveau plat</a>
</div>
{% endblock %}
