{% extends 'base.html.twig' %}

{% block title %}Dessert index{% endblock %}

{% block body %}
<div class="col-11 mx-auto">
    <h3 class="quotes p-4 shadow">Dessert index</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dessert in desserts %}
            <tr>
                <td>{{ dessert.id }}</td>
                <td>{{ dessert.name }}</td>
                <td>{{ dessert.price }}</td>
                <td>
                    <a href="{{ path('app_dessert_show', {'id': dessert.id}) }}">show</a>
                    <a href="{{ path('app_dessert_edit', {'id': dessert.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dessert_new') }}">Nouveau dessert</a>
{% endblock %}
